---
const { label, url, src, minPrice, bgColor } = Astro.props;
---
<li>
    {
        !bgColor ? 
        <a href={url} style={`background-image:url(${src})`} >
            <p>{label}<br>от {minPrice} ₽</p>
        </a> :
        <a class="allCategories" href={url}>{label}</a>
    }
</li>

<style  lang="scss">
    a {
        display: block;
        height: 240px;
        border-radius: 15px;
        background-size: cover;
        background-position: center;
        padding: 1.3em;
        @media (min-width: 768px) {
            height: 300px;
        }
    }
    li {
        transition: ease .5s;
        
        @media (max-width: 768px) {
            min-width: 265px;
        }
        
    }


    p {
        font-size: .8125rem;
        font-weight: 700;
        @media (min-width: 992px) {
            font-size: 1rem;
        }
    }

    .allCategories {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        background-color: #F3704E;
        border-radius: 15px;
        color: #FFFFFF;
        font-size: .8125rem;
        font-weight: 700;
        @media (min-width: 992px) {
            font-size: 1rem;
        }
    }
</style>