---
import Close from '../components/icons/Close.astro';

const response = await fetch(`http://localhost:1337/api/section-menus/1?populate=*`).then(res => res.json());
const data = response.data;
---

<div class="mpp-sitemap">
    <div class="mpp-sitemap-title  container">
        <button class="mpp-sitemap-close-button">
            <Close />
        </button>
        
        <h4>{data.attributes.heading}</h4>
    </div>
    <ul class="mpp-sitemmap-wrap container">
        {
            data.attributes.links.map( item =>
                <li><a href={`/${item.link}`}>{item.label}</a></li>
            )
        }
    </ul>
</div>

<style is:global lang="scss">
    body {
        overflow: hidden;
    }
    .mpp-sitemap {

        display: flex;
        flex-direction: column;

        background-color: #F0F0F0;
        padding: 1.5em 0;
        height: calc(100vh - 7em);
        margin: 2em;

        & h4 {
            font-size: .75rem;
            font-weight: 700;
            margin: 0 .5em 1.3em;
            @media (max-width:768px) {
                margin: 0 0 1.3em;
                width: 100%;
                display: block;
                font-size: 1.5rem;
                font-weight: 500;
            }
        }
        
        & a {
            display: block;
            font-size: .75rem;
            font-weight: 500;
            padding: .9em .5em;
            transition: ease .5s;
            &:hover {
                background: #FFFFFF;
            }
        }

    }

    .mpp-sitemap-title {
        position: relative;
        width: 100%;

        & button {
            position: absolute;
            right: 1.5em;
            top: 0;
            border: none;
            cursor: pointer;
        }
    }

    .mpp-sitemap-close-button {
        @media (min-width: 768px) {
            display: none;
        }
    }

    .mpp-sitemmap-wrap {

        overflow-y: auto;
        flex: 1;

        @media (min-width: 540px) {
            column-gap: 2em;
            column-count: 2;
        }


        @media (min-width: 768px) {
            column-gap: 3em;
            column-count: 3;
        }
        @media (max-width: 768px) {
            margin: 0 2em 0 0;
            /* width */
            &::-webkit-scrollbar {
                width: 2px;
            }

            /* Track */
            &::-webkit-scrollbar-track {
                box-shadow: inset 0 0 5px rgba(0,0,0,.5); 
                border-radius: 10px;
            }
            
            /* Handle */
            &::-webkit-scrollbar-thumb {
                background: rgba(0,0,0,.5); 
                border-radius: 10px;
            }

            /* Handle on hover */
            &::-webkit-scrollbar-thumb:hover {
                background: rgba(0,0,0,1); 
            }
        }

    }
</style>